<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/mainCoordinatorLayout"
        android:focusableInTouchMode="true">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:background="#00000000"
            android:id="@+id/appbarLayout"
            app:layout_behavior=".StopDragBehavior">

        <androidx.appcompat.widget.Toolbar
                app:layout_scrollFlags="scroll"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:minHeight="110dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mainPageText"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.038"
                    android:layout_marginTop="16dp"
                    android:id="@+id/stMain"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textUri|text"
                    android:ems="10"
                    android:id="@+id/ptUrl"
                    android:hint="@string/plaintextUrl" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/stMain"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="start"
                    android:importantForAutofill="no"
                    android:visibility="gone"/>
            <Button
                    android:layout_width="91dp"
                    android:layout_height="45dp"
                    android:id="@+id/btnImage" android:text="@string/buttonText"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/stMain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />
            <ImageView
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imgView"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/stMain" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="80dp" android:background="#FAFAFA"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:id="@+id/recyclerView"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:maxImageSize="30dp" android:visibility="gone"/>
    <moe.codeest.enviews.ENSearchView
            app:search_line_width="8"
            app:search_dot_size="3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/enSearchView"
            app:layout_constraintStart_toStartOf="@id/fab"
            app:layout_constraintEnd_toEndOf="@id/fab"
            app:layout_anchorGravity="center"
            app:layout_anchor="@+id/fab"
            android:elevation="8dp"
            android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>